# Configurações do FiveAnalysis
# Arquivo de variáveis de ambiente para Docker
# Copie este arquivo para .env e ajuste as configurações conforme necessário

# Ambiente da aplicação
APP_ENV=development
APP_NAME=FiveAnalysis
APP_URL=http://localhost

# Configurações do banco de dados PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=FiveAnalysis
DB_USER=admin
DB_PASSWORD=admin123

# Configurações do PgAdmin
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin123

# Configurações de segurança
SESSION_LIFETIME=3600
ENCRYPTION_KEY=your-secret-key-here-change-in-production

# Configurações de upload
MAX_UPLOAD_SIZE=10M
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp

# Configurações de email (opcional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@fiveanalysis.com
MAIL_FROM_NAME=FiveAnalysis

# Configurações de cache
CACHE_ENABLED=true
CACHE_LIFETIME=3600

# Configurações de logs
LOG_LEVEL=info
LOG_FILE=/var/log/fiveanalysis.log

# Configurações de desenvolvimento
DEBUG_MODE=true
SHOW_ERRORS=true

